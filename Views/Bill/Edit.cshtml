@model BanhMyIT.Models.Bill
@{
    ViewData["Title"] = "Edit Bill";
}
<h2>Edit Bill</h2>
<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="BillID" />
    <div class="form-group">
        <label asp-for="UserID"></label>
        <select asp-for="UserID" class="form-control" asp-items="@(new SelectList(ViewBag.Users, "UserID", "FirstMidName"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="ProductID"></label>
        <select asp-for="ProductID" class="form-control" asp-items="@(new SelectList(ViewBag.Products, "ProductID", "Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="PayMethod"></label>
        <select asp-for="PayMethod" class="form-control">
            <option value="">-- Select --</option>
            @foreach (var method in Enum.GetValues(typeof(BanhMyIT.Models.PayMethod))) {
                <option value="@method" selected="@(Model.PayMethod == (BanhMyIT.Models.PayMethod)method)">@method</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="SumPrice"></label>
        <input asp-for="SumPrice" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index">Back to List</a>
</form>
