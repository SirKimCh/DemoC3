@model BanhMyIT.Models.Bill
@{ 
    ViewData["Title"] = "Edit Bill"; 
}
<h1 class="mb-3">Edit Bill</h1>
<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="BillID" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="UserID" class="form-label"></label>
            <select asp-for="UserID" class="form-select" asp-items="@(new SelectList(ViewBag.Users, "UserID", "FirstMidName"))"></select>
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="PayMethod" class="form-label"></label>
            <select asp-for="PayMethod" class="form-select">
                <option value="">-- Select --</option>
                @foreach (var method in Enum.GetValues(typeof(BanhMyIT.Models.PayMethod))) {
                    <option value="@method" selected="@(Model.PayMethod == (BanhMyIT.Models.PayMethod)method)">@method</option>
                }
            </select>
            <span asp-validation-for="PayMethod" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Total Price</label>
            <input class="form-control" value="@Model.TotalPrice" disabled />
        </div>
    </div>
    <div class="mt-4">
        <h5>Items (read-only)</h5>
        @if(Model.BillDetails==null || !Model.BillDetails.Any()){
            <div class="alert alert-secondary">No items linked. Items are created via Cart checkout.</div>
        } else {
            <table class="table table-sm table-bordered">
                <thead><tr><th>Product</th><th class="text-end">Qty</th><th class="text-end">Unit</th><th class="text-end">SubTotal</th></tr></thead>
                <tbody>
                @foreach(var d in Model.BillDetails){
                    <tr>
                        <td>@d.Product?.Name</td>
                        <td class="text-end">@d.Quantity</td>
                        <td class="text-end">@d.UnitPrice</td>
                        <td class="text-end">@d.SubTotal</td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>
@section Scripts { 
    <partial name="_ValidationScriptsPartial" /> 
}
