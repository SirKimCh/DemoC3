@model BanhMyIT.Models.Bill
@{
    ViewData["Title"] = "Bill Details";
}
<h2>Bill Details</h2>
<div>
    <h4>Bill #@Model.BillID</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User?.FirstMidName @Model.User?.LastName</dd>
        <dt class="col-sm-2">Pay Method</dt>
        <dd class="col-sm-10">@Model.PayMethod</dd>
        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToLocalTime()</dd>
        <dt class="col-sm-2">Total Price</dt>
        <dd class="col-sm-10">@Model.TotalPrice</dd>
    </dl>
    <h5 class="mt-4">Items</h5>
    @if (Model.BillDetails == null || !Model.BillDetails.Any())
    {
        <div class="alert alert-secondary">No items.</div>
    }
    else
    {
        <table class="table table-sm table-bordered">
            <thead><tr><th>Product</th><th class="text-end">Qty</th><th class="text-end">Unit</th><th class="text-end">SubTotal</th></tr></thead>
            <tbody>
            @foreach(var d in Model.BillDetails){
                <tr>
                    <td>@d.Product?.Name</td>
                    <td class="text-end">@d.Quantity</td>
                    <td class="text-end">@d.UnitPrice</td>
                    <td class="text-end">@d.SubTotal</td>
                </tr>
            }
            </tbody>
        </table>
    }
    <form asp-action="Recalculate" method="post" class="mb-3">
        <input type="hidden" name="id" value="@Model.BillID" />
        <button class="btn btn-outline-warning btn-sm">Recalculate</button>
    </form>
    <a asp-action="Edit" asp-route-id="@Model.BillID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
