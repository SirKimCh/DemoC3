@model IEnumerable<BanhMyIT.Models.Bill>
@{ 
    ViewData["Title"] = "Bills"; 
}
<h1 class="mb-3">Bills</h1>
<div class="d-flex justify-content-between mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>
@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No bills found.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
        <tr>
            <th>User</th>
            <th class="text-end">Items</th>
            <th class="text-end">Total Price</th>
            <th>Pay Method</th>
            <th>Created</th>
            <th style="width:210px;"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.User?.FirstMidName @b.User?.LastName</td>
                <td class="text-end">@b.BillDetails?.Count()</td>
                <td class="text-end">@b.TotalPrice</td>
                <td>@b.PayMethod</td>
                <td>@b.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Details" asp-route-id="@b.BillID" class="btn btn-outline-secondary">Details</a>
                        <a asp-action="Edit" asp-route-id="@b.BillID" class="btn btn-outline-primary">Edit</a>
                        <form asp-action="Recalculate" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@b.BillID" />
                            <button type="submit" class="btn btn-outline-warning">Recalc</button>
                        </form>
                        <a asp-action="Delete" asp-route-id="@b.BillID" class="btn btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
