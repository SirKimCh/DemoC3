@model BanhMyIT.Models.Bill
@{
    ViewData["Title"] = "Delete Bill";
}
<h2>Delete Bill</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Bill</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User?.FirstMidName @Model.User?.LastName</dd>
        <dt class="col-sm-2">Pay Method</dt>
        <dd class="col-sm-10">@Model.PayMethod</dd>
        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToLocalTime()</dd>
        <dt class="col-sm-2">Items</dt>
        <dd class="col-sm-10">@Model.BillDetails?.Count()</dd>
        <dt class="col-sm-2">Total Price</dt>
        <dd class="col-sm-10">@Model.TotalPrice</dd>
    </dl>
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="BillID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>
