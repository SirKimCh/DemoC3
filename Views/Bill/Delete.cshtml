@model BanhMyIT.Models.Bill
@{
    ViewData["Title"] = "Delete Bill";
}
<h2>Delete Bill</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Bill</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">User</dt>
        <dd class = "col-sm-10">@Model.User?.FirstMidName @Model.User?.LastName</dd>
        <dt class = "col-sm-2">Product</dt>
        <dd class = "col-sm-10">@Model.Product?.Name</dd>
        <dt class = "col-sm-2">PayMethod</dt>
        <dd class = "col-sm-10">@Model.PayMethod</dd>
        <dt class = "col-sm-2">SumPrice</dt>
        <dd class = "col-sm-10">@Model.SumPrice</dd>
    </dl>
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="BillID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index">Back to List</a>
    </form>
</div>
