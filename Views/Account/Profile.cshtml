@model BanhMyIT.ViewModels.UserAddressViewModel
@{
    ViewData["Title"] = "Profile";
}
<h2>Profile</h2>
<form asp-action="Profile" method="post">
    <div class="mb-3">
        <label asp-for="FirstMidName" class="form-label"></label>
        <input asp-for="FirstMidName" class="form-control" />
        <span asp-validation-for="FirstMidName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="StreetAddress" class="form-label"></label>
        <input asp-for="StreetAddress" class="form-control" />
        <span asp-validation-for="StreetAddress" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ProvinceId" class="form-label"></label>
        <select asp-for="ProvinceId" class="form-select" asp-items="ViewBag.Provinces" id="ProvinceId"></select>
        <span asp-validation-for="ProvinceId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DistrictId" class="form-label"></label>
        <select asp-for="DistrictId" class="form-select" asp-items="ViewBag.Districts" id="DistrictId"></select>
        <span asp-validation-for="DistrictId" class="text-danger"></span>
    </div>
    <div class="text-danger">@Html.ValidationSummary()</div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('ProvinceId').addEventListener('change', function () {
            var pid = this.value;
            fetch('/Account/GetDistricts?provinceId=' + pid)
                .then(r => r.json())
                .then(list => {
                    var sel = document.getElementById('DistrictId');
                    sel.innerHTML = '';
                    list.forEach(function (d) {
                        var opt = document.createElement('option');
                        opt.value = d.districtId || d.DistrictId;
                        opt.textContent = d.name || d.Name;
                        sel.appendChild(opt);
                    });
                });
        });
    </script>
}

