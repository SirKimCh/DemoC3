@model IEnumerable<BanhMyIT.Models.User>
@{
    ViewData["Title"] = "Users";
}
<h1 class="mb-3">Users</h1>
<div class="d-flex justify-content-between mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>
@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No users found.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th style="width:180px;"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.FirstMidName @u.LastName</td>
                <td>@u.Address</td>
                <td>@u.City</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Details" asp-route-id="@u.UserID" class="btn btn-outline-secondary">Details</a>
                        <a asp-action="Edit" asp-route-id="@u.UserID" class="btn btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@u.UserID" class="btn btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
