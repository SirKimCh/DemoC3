@model BanhMyIT.Models.User
@{
    ViewData["Title"] = "Delete User";
}
<h2>Delete User</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.FirstMidName @Model.LastName</dd>
        <dt class="col-sm-3">Street</dt>
        <dd class="col-sm-9">@Model.StreetAddress</dd>
        <dt class="col-sm-3">District</dt>
        <dd class="col-sm-9">@Model.District?.Name</dd>
        <dt class="col-sm-3">Province</dt>
        <dd class="col-sm-9">@Model.Province?.Name</dd>
        <dt class="col-sm-3">Full Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>
    </dl>
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UserID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
