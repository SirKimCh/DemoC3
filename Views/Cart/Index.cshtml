@model BanhMyIT.Models.Cart
@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>Your Shopping Cart</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model?.CartDetails == null || Model.CartDetails.Count == 0)
{
    <div class="alert alert-info">
        Your cart is empty. <a asp-controller="Product" asp-action="Index">Continue shopping</a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartDetails)
                {
                    <tr>
                        <td>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductID">
                                @item.Product.Name
                            </a>
                        </td>
                        <td>@item.UnitPrice</td>
                        <td>@item.Quantity</td>
                        <td>@item.SubTotal</td>
                        <td>
                            <form asp-action="RemoveFromCart" method="post" style="display: inline;">
                                <input type="hidden" name="cartDetailId" value="@item.CartDetailId" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end fw-bold">Total:</td>
                    <td>@Model.CartDetails.Sum(i => i.SubTotal)</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
            Continue Shopping
        </a>
        
        <div>
            <form asp-action="ClearCart" method="post" style="display: inline;">
                <button type="submit" class="btn btn-warning">Clear Cart</button>
            </form>
            
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#checkoutModal">
                Checkout
            </button>
        </div>
    </div>
    
    <!-- Checkout Modal -->
    <div class="modal fade" id="checkoutModal" tabindex="-1" aria-labelledby="checkoutModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="Checkout" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="checkoutModalLabel">Complete Your Order</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="payMethod" class="form-label">Payment Method</label>
                            <select class="form-select" id="payMethod" name="payMethod">
                                @foreach (var payMethod in Enum.GetValues(typeof(PayMethod)))
                                {
                                    <option value="@payMethod">@payMethod</option>
                                }
                            </select>
                        </div>
                        
                        <p>Total Amount: @Model.CartDetails.Sum(i => i.SubTotal)</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Place Order</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
